<section class="panel panel-default">
  <div class="panel-heading">
    <h4>Edit a cars</h4>
  </div>
  <div class="panel-body">
    <form action="/cars/{{car._id}}" method="post">
      <input type="hidden" name="_method" value=PUT>
      <div class="form-group">
        <input type="text"  class="form-control"name="driver_name" value="{{car.driver.name}}" placeholder="Driver name">
      </div>
      <div class="form-group">
        <input type="text"  class="form-control"name="license_plate" value="{{car.license.plate}}" placeholder="License Plate">
      </div>
      <div class="form-group">
        <select class="" name="status" class="form-control">
          {{#equals car.status 'IN'}}
            <option value="IN" selected="">Inside</option>
            <option value="-1">Choose an option</option>
            <option value="OUT">Outside</option>
          {{/equals}}
          {{#equals car.status 'OUT'}}
            <option value="OUT" selected="">Outside</option>
            <option value="IN">Inside</option>
            <option value="-1">Choose an option</option>
          {{/equals}}
        </select>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success" name="name" value="Edit">
      </div>
    </form>
  </div>
</section>
